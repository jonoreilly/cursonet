<Window x:Class="clasesGesEscuela.Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clasesGesEscuela.Vistas"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="Azure" BorderBrush="AliceBlue" BorderThickness="4">
            <StackPanel>
                <DockPanel Margin="10">
                    <TextBlock x:Name="tbNombreCurso" Text="Nombre del curso :  " Padding="5"/>
                    <TextBox x:Name="txtNombreCurso" Padding="5" Margin="10,0,0,0"/>
                </DockPanel>
                <Button x:Name="btnGuardarCurso" Content="Guardar" Width="240">
                    <!-- <Button.Content>
                    
                    </Button.Content> -->
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
