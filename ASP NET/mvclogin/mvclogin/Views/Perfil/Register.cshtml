
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@model mvclogin.Models.User

@{
	ViewBag.Title = "Register";
}


<div>
	@if (ViewBag.error != null)
	{
		if (ViewBag.error == "again")
		{
			<h2 style="color: red">* Ese nombre de usuario ya esta en uso. Prueba con otro *</h2>
		}

		if (ViewBag.error == "incorrect")
		{
			<h2 style="color: red">* Nombre de usuario o contraseña incorrectos *</h2>
		}
	}

	@using (Html.BeginForm("registerAction", "Perfil", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		<p>
			Usuario: @Html.EditorFor(model => model.nombreUsuario)
		</p>

		<p>
			Contraseña: @Html.PasswordFor(model => model.contraseña)
		</p>

		<input type="submit" value="Register" style="display: inline-block"/>

		<button  onclick='@Html.Action("loginPage")' style="display: inline-block" />
	}

	

</div>


