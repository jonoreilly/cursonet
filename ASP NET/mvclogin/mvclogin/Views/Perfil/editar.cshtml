@model mvclogin.Models.User

@{
    ViewBag.Title = "editar";
}

<h2>Editar</h2>



<div>

	@using (Html.BeginForm("editarAction", "Perfil", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		<p>
			Nuevo suario: @Html.EditorFor(model => model.nombreUsuario)
		</p>

		<p>
			Nueva contraseña: @Html.PasswordFor(model => model.contraseña)
		</p>

		<p>
			Repite la contraseña: @Html.PasswordFor(modelo => modelo.contraseña)
		</p>

		<input type="submit" value="log in" />
	}

</div>


